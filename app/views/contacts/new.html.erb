<h2><%= t('.contact_us') %></h2>
<div class="col-md-6 col-md-offset-3 login-form">
<%= simple_form_for @contact, :url => contacts_path do |f| %>
	<%= f.input :name, :label => t('.name'), input_html: { class:'form-control'}, wrapper_html: { class: 'form-group' } %>
	<%= f.input :email, :label => t('.email'), input_html: { class:'form-control'} , wrapper_html: { class: 'form-group' } %>
	<%= f.input :subject, :label => t('.subject'), input_html: { class:'form-control'}, wrapper_html: { class: 'form-group' } %>
	<%= f.input :message, :as => :text, :label => t('.message'), input_html: { class:'form-control'}, wrapper_html: { class: 'form-group' }%>
	<div class="form-group">
		<div class="form-button text-center">
			<%= f.button :submit, :value => 'Submit', class: "btn btn-lg btn-primary pull-left"  %>
		</div>
	</div>
</div>
</div>
<% end %>
