<div class="row title-row">
    <div class="col-lg-8">
		    <h2 class="text-left"><%= @vstream.name %> </h2>
		<%#= render 'follow_form' if signed_in? %>
    </div>
</div>



<div class="row">
    <div class="col-lg-8"> <!-- Left side -->
        <div class="stream-graph graph-canvas" id="graph-canvas"></div>
        <span class="btn btn-primary" id="prediction-btn">Fetch Prediction</span>
        <div id="prediction-description" class="pull-right">
            <span class="label prediction-80">80% Confidence interval</span>
            <span class="label prediction-95">95% Confidence interval</span>
        </div>
        <div class="pull-right">Live update:
            <div class="make-switch switch-mini" id="live-update-btn">
                <input id="live-update-checkbox" type="checkbox" />
            </div>
        </div>
        <h4>Owner: </h4>
      <div class="stream-description well"><a href="/users/<%= @vstream.user_id %>" ><%= @vstream.user_id %></a></div>

        <h4>Description: </h4>
        <div class="stream-description well"><%= @vstream.description %></div>

        <h4>Tags: </h4>
        <div class="stream-description well"><%= @vstream.tags %></div>
        
        
        <% if not current_user.username.nil? and current_user.username == @vstream.user_id %>
            <h4>Streams Involved: </h4>
            <div class="streams-involved well">
                <% @vstream.streams_involved.each do | cur | %>
                    <!-- <a href="/users/<%=@vstream.user_id%>/streams/<%#=cur%>"> <%= cur %></a><br> -->
                    <%= vstreamname(cur) %><br>
                <%end%>



            </div>
        <% end %>


        <% if not @user.nil? and @user.username == @vstream.user_id %>
        <%= link_to 'Edit', edit_vstream_path(@vstream), class: "glyphicon glyphicon-pencil btn btn-primary" %>
        <%= link_to 'Delete', @vstream, confirm: 'Are you sure?', method: :delete, class: "glyphicon glyphicon-remove btn btn-danger" %>
        <% end %>
    </div>
    
</div>
<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCwrjTHAuOL2MG_bEC--E-hYSqn8GC2R8c&sensor=false" ></script>



