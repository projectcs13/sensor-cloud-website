<div class="banner">
	<div class="row search-bar">
		<div class="col-md-4 col-md-offset-4">
			<%= form_for(:search, url: searches_path) do |f| %>
				<div class="col-md-11" style="padding-right: 0px;">
					<%= f.text_field :query, class: "searchbar form-control input-lg pull-right", placeholder: "e.g. Temperature in Uppsala" %>
					<%= f.hidden_field :sort_by, :value => "average" %>
				</div>
				<div class="col-md-1" style="padding-left: 0px;">
					<%= f.submit "Search", class: "btn btn-lg btn-primary pull-left", style: "border-radius: 0px;" %>
				</div>
			<% end %>
		</div>
	</div>
</div>

<%#= render "marketing.html.erb" %>
