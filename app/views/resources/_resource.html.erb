<aside class="resources-sidebar">
  <% @resource.attributes.each do | key, value | %>

    <% if key != "id" and
          key != "mirror_proxy" and
          key != "streams" and
          key != "user_id" %>
      <div class="input-group">
        <span class="input-group-addon"><%= @f.label key %></span>
        <!-- Don't do anything -->

        <% if key == "update_freq" %>
          <%= @f.text_field key, class: "form-control hotfix-update-freq" %>
          <div class="input-group-btn">
            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">Frequency? <span class="caret"></span></button>
            <ul class="dropdown-menu pull-right">
              <li><a href="#">Select the frequency</a></li>
              <li class="divider"></li>
              <li><a href="#">Seconds</a></li>
              <li><a href="#">Minutes</a></li>
              <li><a href="#">Hours</a></li>
              <li><a href="#">Days</a></li>
            </ul>
          </div>

        <% elsif key == "creation_date" %>
          <%= @f.text_field key, class: "form-control", :disabled => 'disabled' %>

        <% elsif key == "active" %>
          <%= @f.check_box key %>

        <% elsif key == "model" %>
          <%= @f.text_field key, class: "form-control" %>
          <%#= button_to "Suggest", @resource, remote: true, id: "suggest-btn", class: "btn btn-primary" %>
          <%#= link_to "Suggest", nil, id: "suggest-btn", class: "btn btn-primary" %>
          <a href="#" id="suggest-btn" class="btn btn-primary">Suggest</a>

        <% else %>
          <%= @f.text_field key, class: "form-control" %>

        <% end %>
      </div>
    <% end %>

  <% end %>
</aside>
