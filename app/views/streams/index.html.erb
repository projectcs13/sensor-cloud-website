<div>
  <% if @user.username == params[:id] %>
    <h1 class="title">My Streams</h1>
  <% else %>
    <h1 class="title"><%= params[:id]%>'s Streams</h1>
  <% end %>

  <%if @user.username == params[:id] %>
    <div class="corner">
      <%= link_to 'Delete All Streams', streams_path, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger right glyphicon glyphicon-remove" %>
      <div class="btn-group">
        <%= link_to 'New Stream', new_stream_path, class: "btn btn-primary glyphicon glyphicon-plus" %>
        <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
          <span class="caret"></span>
          <span class="sr-only">Toggle Dropdown</span>
        </button>
        <ul class="dropdown-menu" role="menu">
          <li>
            <%= link_to "From resource", controller: "streams", action: "new_from_resource" %>
          </li>
        </ul>
      </div>
    </div>
  <% end %>
  <div class="clearfix"></div>

</div>
<!-- <div class="panel panel-default"> -->
<div>
  <ul class="list-group col-md-6 left">
    <% @streams.each do | stream | %>
      <li class="list-group-item">
        <h4 class="left"><%= stream['name'] %></h4>

        <div class="right">
          <i class="show-details glyphicon glyphicon-chevron-down right"></i>
          <%if @user.username == params[:id] %>
						<%= link_to 'Delete', "/streams/#{stream['id']}", method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger right glyphicon glyphicon-remove" %>
          <% end %>
          <%= link_to 'View', stream_path(stream['id']), class: "btn btn-sm btn-primary right glyphicon glyphicon-pencil" %>
        </div>

        <div class="clearfix"></div>

        <div class="details" style="display: none;">
          <p><%= stream['description'] %></p>
          <p><%= stream['tags'] %></p>
          <p><%= stream['type'] %></p>
          <p>
            <% if stream['private'] == "true" %>
              <span class="label label-danger">Private</span>
            <% else %>
              <span class="label label-success">Public</span>
            <% end %>

            <% if stream['active'] == "true" %>
              <span class="label label-success">Active</span>
            <% else %>
              <span class="label label-danger">Inactive</span>
            <% end %>
          </p>
          <%#= stream.user_ranking %>
          <%#= stream.subscribers %>
        </div>
      </li>
    <% end %>
  </ul>

  <div class="map col-md-4 right">
    MAP
  </div>
</div>

<div class="center">
  <%#= will_paginate @streams, renderer: BootstrapPagination::Rails, bootstrap: 3, class: "center" %>
</div>
