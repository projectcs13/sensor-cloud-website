<div>
  <% if @user.username == params[:id] %>
    <h1 class="title">My Streams</h1>
  <% else %>
    <h1 class="title"><%= params[:id]%>'s Streams</h1>
  <% end %>

  <%if @user.username == params[:id] %>
    <div class="corner">
      <%= link_to 'Delete All Streams', streams_path, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger right glyphicon glyphicon-remove" %>
      <div class="btn-group right">
        <%= link_to 'New Stream', new_stream_path, class: "btn btn-primary glyphicon glyphicon-plus" %>
        <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
          <span class="caret"></span>
          <span class="sr-only">Toggle Dropdown</span>
        </button>
        <ul class="dropdown-menu" role="menu">
          <li>
            <%= link_to "From resource", controller: "streams", action: "new_from_resource" %>
          </li>
        </ul>
      </div>
    </div>
  <% end %>
  <div class="clearfix"></div>
</div>
