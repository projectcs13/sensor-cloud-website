<% provide(:title, 'All users') %>
<h1>All users</h1>

<%= will_paginate @users, renderer: BootstrapPagination::Rails, 
													bootstrap: 3 %>
															
<ul class="users">
	<% @users.each do |user| %>
		<li>
			<%= gravatar_for user, size: 52 %>
			<%= link_to user.name, user %>
		</li>
	<% end %>
</ul>

<%= will_paginate @users, renderer: BootstrapPagination::Rails, 
										 			bootstrap: 3 %>
